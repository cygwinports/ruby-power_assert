inherit rubygem

NAME="ruby-power_assert"
VERSION=1.1.1
RELEASE=1
CATEGORY="Ruby"
SUMMARY="Power Assert for Ruby"
DESCRIPTION="Power Assert shows each value of variables and method calls in the
expression. It is useful for testing, providing which value wasn't correct when
the condition is not satisfied."

ARCH=noarch

PKG_NAMES="${NAME} ${NAME}-doc"
ruby_power_assert_CONTENTS=${RUBYGEM_INSTDIR#/}" "${RUBYGEM_SPEC#/}
ruby_power_assert_doc_CONTENTS=${RUBYGEM_DOCDIR#/}


